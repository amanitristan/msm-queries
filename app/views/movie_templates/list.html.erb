<h1>List of all movies</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% Movie.all.each do |a_movie| %>
    <div><%= a_movie.title %></div>
    <tr>
      <td><%= a_movie.id %></td>
      <td>
        <img src="<%= a_movie.image %>" width="50">
      </td>
      <td><%= a_movie.title %></td>
      <td><%= a_movie.year %></td>
      <td>
        <% matching_records = Director.where({ id: a_movie.director_id })%>
        <%= matching_records.at(0) %>
      </td>
      <td>Show details</td>
    </tr>
  <% end %>
</table>
